
@model List<ResultsViewModel>
<table class="table table-bordered ">
    <thead>
        <tr>
            <th scope="col" class="col-md-1">Место</th>
            <th sope="col" class=" col-md-1">Номер пары</th>
            <th sope="col" class=" col-md-4">Партнер - Партнерша</th>
        </tr>
    </thead>
    <tbody class="font-weight-bolder ">
        @foreach (var item in @Model)
        {
            <tr>
                <td class="text-center">@item.Position</td>
                <td class="text-center">@item.Number</td>
                <td>
                    @item.Partner1FullName - @item.Partner2Fullname
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-end">
    <a asp-action="GetResultsToPrint" asp-controller="RunTournament" asp-route-results="@Json.Serialize(Model)" target="_blank" class="btn btn-info rounded-pill rn-btn">Печать</a>

</div>
