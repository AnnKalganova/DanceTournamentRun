
@model Dictionary<int, List<int>>
<table class="table table-bordered ">
    <thead>
        <tr>
            <th scope="col" class="col-md-1">Заходы</th>
            <th sope="col" class=" col-md-2">Номера пар</th>
        </tr>
    </thead>
    <tbody class="font-weight-bold ">
        @foreach (var item in @Model)
        {
            <tr>
                <td>@item.Key</td>
                <td>
                    @{string numbers = "";}
                    @for (var i = 0; i < item.Value.Count - 1; i++)
                    {
                        numbers += item.Value[i] + ", ";
                    }
                    @{ numbers += item.Value.Last();}
                    @numbers
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-end">
    <a asp-action="GetHeatsToPrint" asp-controller="RunTournament" asp-route-groupId="@ViewBag.groupId" target="_blank" class="btn btn-info rounded-pill rn-btn">Печать</a>

</div>
