<div class="login-reg-panel">
    <div class="login-info-box">
        <h2>Есть аккаунт?</h2>
        <label id="label-register" for="log-reg-show">Login</label>
        <input type="radio" name="active-log-panel" id="log-reg-show" checked="checked">
    </div>

    <div class="register-info-box">
        <h2>Нет аккаунта?</h2>
        <label id="label-login" for="log-login-show">Register</label>
        <input type="radio" name="active-log-panel" id="log-login-show">
    </div>

    <div class="white-panel">
        <div class="login-show">
            <h2>LOGIN</h2>
            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div>
                    <div class="form-group">
                        <input type="text" name="Login" placeholder="Введите логин"/>
                        @*<span asp-validation-for="@Model.Item1.Login" />*@
                    </div>
                    <div class="form-group">
                        <input type="password" name="Password" placeholder="Введите пароль"/>
                        @*<span asp-validation-for="Password" />*@
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Войти" class="btn btn-outline-info" />
                    </div>
                </div>
            </form>
        </div>
        <div class="register-show">
            <h2>REGISTER</h2>
            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div>
                    <div>
                        <input type="text" name="Login" placeholder="Введите логин"/>
                        @*<span asp-validation-for="@Model.Item2.Login" />*@
                    </div>
                    <div>
                        <input type="text" name="LastName" placeholder="Введите фамилию"/>
                        @*<span asp-validation-for="@Model.Item2.LastName" />*@
                    </div>
                    <div>
                        <input type="text" name="FirstName" placeholder="Введите имя"/>
                        @*<span asp-validation-for="@Model.Item2.FirstName" />*@
                    </div>
                    <div>
                        <input type="password" name="Password" placeholder="Введите пароль"/>
                        @*<span asp-validation-for="Password" />*@
                    </div>
                    <div>
                        <input type="password" name="ConfirmPassword" placeholder="Повторите пароль"/>
                        @*<span asp-validation-for="@Model.Item2.ConfirmPassword" />
                    </div>*@
                    <div>
                        <input type="submit" value="Регистрация" class="btn btn-outline-info"/>
                    </div>
                </div>
            </form>


        </div>
    </div>
</div>

