@model DanceTournamentRun.Models.CreateGroupModel
@{
    ICollection<GroupViewModal> groups = ViewBag.groups;
}
<div class="d-flex">

    <table class="table table-striped table-borderless col-md-7">
        <thead>
            <tr>
                <th scope="col">Порядок</th>
                <th scope="col">Название</th>
                <th scope="col">Танцы</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in groups)
            {
                <tr>
                    <td>@item.Number</td>
                    <td>@item.Name</td>
                    <td>@{ var dances = "";}
                    @foreach (var dance in item.Dances)
                    {
                        dances += dance.Name + " ";
                    }
                    @dances
                    </td>
                    <td><a href="/K/Upd?id=Пн">Изменить</a></td>
                </tr>
            }
        </tbody>
    </table>
    <button type="button" class="btn btn-info  h-25 .col-md-3" data-toggle="modal" data-target="#dialogAddGroup">
        Добавить группу
    </button>
</div>

<h3 id="message"></h3>

<div class="modal fade" id="dialogAddGroup" tabindex="-1" role="dialog" aria-labelledby="dialogAddGroupCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="dialogAddGroupCenterTitle">Добавление группы</h5>
                <button id="closeAddGrp" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
            <div class="modal-body">
                <form id="addGrForm" asp-anti-forgery="true">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <input type="hidden" id="postId" name="TournamentId" value="@ViewBag.tournamentId">
                    <div>
                        <div class="form-group">
                            <label asp-for="Name" class="col-form-label">Название</label>
                            <input id="groupName" type="text" asp-for="Name" class="form-control" placeholder="Введите название группы" />
                            <span asp-validation-for="Name" />
                        </div>
                        <label class="control-label" for="dances">Танцы:</label>
                        <div class="control-group" id="dances">
                            <div class="controls">
                                <div class="entry input-group form-group">
                                    <input class="form-control" name="Dances[0]" placeholder="Введите название танца" type="text">
                                    <span class="input-group-btn">
                                        <button class="btn btn-success btn-add" type="button">
                                            <span class="oi oi-plus" title="icon name" aria-hidden="true"></span>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <small>Нажмите  <span class="oi oi-plus" title="icon name" aria-hidden="true"></span> чтобы добавить еще один танец :)</small>
                    </div>
                </form>
            </div>
                <div class="modal-footer">
                    <button id="cancelAddGrp" type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                    <button id="submitAddGrp" type="submit" form="addGrForm" class="btn btn-primary" data-dismiss="modal">Сохранить</button>
                </div>
            
        </div>
    </div>
</div>




