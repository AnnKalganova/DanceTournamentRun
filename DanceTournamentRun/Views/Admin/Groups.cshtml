@model DanceTournamentRun.Models.CreateGroupModel
@{
    IQueryable<Group> groups = ViewBag.groups;
}
<div class="d-flex">

    <table class="table table-striped table-borderless col-md-7">
        <thead>
            <tr>
                <th scope="col">Порядок</th>
                <th scope="col">Название</th>
                <th scope="col">Танцы</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in groups)
            {
                <tr>
                    <td>@item.Number</td>
                    <td>@item.Name</td>
                    <td>Танцы</td>
                    <td><a href="/K/Upd?id=@item.Id&day=Пн">Изменить</a></td>
                </tr>
            }
        </tbody>
    </table>
    <button type="button" class="btn btn-info  h-25 .col-md-3" data-toggle="modal" data-target="#dialogAddGroup">
        Добавить группу
    </button>
</div>

<h3 id="message"></h3>

<div class="modal fade" id="dialogAddGroup" tabindex="-1" role="dialog" aria-labelledby="dialogAddGroupCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="dialogAddGroupCenterTitle">Добавление группы</h5>
                <button id="closeAddGrp" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
            <div class="modal-body">
                <form id="addGrForm" asp-anti-forgery="true">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <input type="hidden" id="postId" name="TournamentId" value="@ViewBag.tournamentId">
                    <div>
                        <div class="form-group">
                            <label asp-for="Name" class="col-form-label">Введите название группы</label>
                            <input id="groupName" type="text" asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" />
                        </div>
                    </div>
                </form>
            </div>
                <div class="modal-footer">
                    <button id="cancelAddGrp" type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                    <button id="submitAddGrp" type="submit" form="addGrForm" class="btn btn-primary" data-dismiss="modal">Сохранить</button>
                </div>
            
        </div>
    </div>
</div>


<script src="~/js/ModalDialog.js" asp-append-version="true"></script>