@model DanceTournamentRun.Models.CreateTournModel

<div>Создание турнира</div>

<form asp-action="CreateTournament" asp-controller="Admin" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Name">Введите название турнира</label>
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <input type="submit" value="Создать" class="btn" />
        </div>
    </div>
</form>
