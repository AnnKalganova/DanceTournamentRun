@model DanceTournamentRun.Models.CreateTournModel
@{
    ViewData["Title"] = "Create Page";
}

<h2>Создание турнира</h2>

<form asp-action="CreateTournament" asp-controller="Admin" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <p> <label asp-for="Name">Введите название турнира</label></p>
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <input type="submit" value="Создать" class="btn" />
        </div>
    </div>
</form>
